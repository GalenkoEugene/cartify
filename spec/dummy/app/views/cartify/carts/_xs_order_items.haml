- @order_items.each do |order_item|
  .general-cart-item.divider-lg-bottom
    = button_to order_items_path(order_item), { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.title}' from your cart?" }, method: :delete, remote: true, class: "close general-cart-close", 'aria-label': 'Close' } do
      %span{'aria-hidden': "true"} &times;
    .general-img-wrap-table
      = link_to main_app.product_path(order_item.product)
    = link_to main_app.product_path(order_item.product), class: 'text-as-link' do
      %p.title= order_item.product.title
    %table.table
      %tr
        %td
          %span.in-grey-600= t('cart.price')
        %td
          %span.font-16.in-gold-500= number_to_currency(order_item.product.price)
      %tr
        %td.vertical-middle
          %span.in-grey-600= t('cart.quantity')
        = render 'cartify/carts/quantity', order_item: order_item
      %tr
        %td
          %span.in-grey-600= t('cart.subtotal')
        %td
          %span.font-16.in-gold-500= number_to_currency(order_item.total_price)